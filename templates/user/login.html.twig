{% extends 'base.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/form.css') }}">
{% endblock %}

{% block body %}
    <div class="col-sm-4 col-sm-offset-4 form-top text-center bounceIn">
        <b><a href="{{ path('register') }}">INSCRIPTION</a></b><br>
        <b><a href="{{ path('articles') }}">ARTICLES</a></b>
    </div>

    <div class="col-sm-4 col-sm-offset-4 form-wrapper">
        <img class="col-sm-offset-4" src="{{ asset('img/user.png') }}" height="150" width="150">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {{ form_start(form, {'action': path('login'), 'method': 'POST'}) }}
        {{ form_row(form._username, {'value': last_username}) }}
        {{ form_row(form._password) }}
        {{ form_row(form.submit) }}
        {{ form_end(form) }}
        <p>* Champs obligatoires</p>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}